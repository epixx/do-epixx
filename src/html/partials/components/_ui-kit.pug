// UI-kit

//BTN type

+b.btn
  .container
    .row
      .col-xs-12.col-md-3
        h1 Типы кнопок
      .col-xs-12.col-md-3
        h3 Акцентное
        +e.examlple-inner
          +b.btn--orange(href="#") Отправить на проверку
        +e.examlple-inner
          +b.btn--orange(href="#") Войти
      .col-xs-12.col-md-3
        h3 Обычное
        +e.examlple-inner
          +b.btn--border-orange(href="#") Запустить
        +e.examlple-inner
          +b.btn--border-orange(href="#") Редактировать
        +e.examlple-inner
          +b.btn--border-orange(href="#") Сохранить
      .col-xs-12.col-md-3
        h3 Отказ
        +e.examlple-inner
          +b.btn--dark-orange(href="#") Удалить
        +e.examlple-inner
          +b.btn--dark-orange(href="#") Отказаться

// BTN style

+b.btn
  .container
    .row
      .col-xs-12
        h1 Состояние кнопок
      .col-xs-12
        .row
          .col-xs-12.col-md-3
            +e.H3.title Акцентное
          .col-xs-12.col-md-3
            +e.examlple-inner
              +b.btn--orange(href="#") Войти
              +e.P Обычное состояние
          .col-xs-12.col-md-3
            +e.examlple-inner
              +b.btn--orange.--passive(href="#") Войти
              +e.P Неактивное состояние
          .col-xs-12.col-md-3
